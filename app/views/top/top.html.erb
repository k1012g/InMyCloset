<% if signed_in? %>
	<!-- ログインしているときはフォローしている人のタイムラインを表示 -->
	<div class="timeline">
		<% if current_user.followings.present? %>
			<strong class="font-l text-center">
				Today's Post : <%= @todayPost %>
			</strong>
		<% else %>
			<strong class="font-l text-center">
				No Users<br>
				<%= link_to "Let's Follow!", search_path %>
			</strong>
		<% end %>
		<% @cloth.each do |cloth| %>
			<div class="contents-size-top border">
				<%= render 'clothes/index', clothes: cloth %>
			</div>
		<% end %>
	</div>
<% else %>
	<!-- ログインしていないときはTOPページ -->
	<main>
		<section class="section1">
			<div class="inner fadeInTitle">
				<strong class="font-l text-center">
					Welcome to InMyCloset
				</strong>
			</div>
		</section>
		<section class="section2">
			<strong class="font-s text-center fade_off sample">
				Do you like fashion?<br>
				Fashion is universal culture.<br>
				Everyone should enjoy fashion<br>
				through "InMyCloset".
			</strong>
		</section>
	</main>

	<div class="text-center top">
		<strong class="font-l" style="display: block; margin-bottom: 30px;">
			Welcome to InMyCloset!
		</strong>

		<section class="contents1">
			<strong>
				I am sure you have the experience of forgetting what you have in your closet.
			</strong>
		</section>

		<strong class="font-m" style="display: block; margin-bottom: 70px;">
			If it were possible,<br>
			you think you want to bring<br>
			your closet to clothing store<br>
			you always buy clothes.
		</strong>

		<section class="contents2">
			<strong>
				This application "InMyCloset" makes it possible.
			</strong>
		</section>

		<section class="contents3">
			<strong class="font-l" style="display: block; margin-bottom: 30px;">
				Only 3 steps!
			</strong>

			<strong class="font-m">
				Step 1 : Fill in required items.
			</strong>

			<div class="step1">
				<!-- ここには画像が入ります -->
			</div>

			<strong class="font-m" style="display: block; margin-bottom: 30px;">
				<%= link_to "☞ Sign up here!", new_user_registration_path %>
			</strong>

			<strong class="font-m">
					Step 2 : Add your clothes.
			</strong>

			<div class="step2">
				<!-- ここには画像が入ります -->
			</div>

			<strong class="font-m">
				Step 3 : Enjoy fashion!
			</strong>

			<div class="step3">
				<!-- ここには画像が入ります -->
			</div>
		</section>
	</div>
<% end %>