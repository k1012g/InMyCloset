<div class="search">
	<div class="upper">
		<h1><strong>Search Page</strong></h1>
		<%= form_tag(search_path,:method => 'get') do %>
			<%= text_field_tag :input, '', placeholder: 'Example : Gucci, Justin Biebar' %>
			<%= select_tag :sort, options_for_select({ "User" => "User", "Brand" => "Brand", "Category" => "Category" }) %>
			<%= submit_tag "Search", class: "btn common-btn" %>
		<% end %>
		<span style="font-size: 25px;"><strong>
			You can search everything you want to check.<br>
			Sorting fuction and search box can be available.<br>
		</strong></span>
	</div>
	<div class="lower">
		<% if @sort == "User" %>
			<% if @input.blank? %>
				<% @users.each do |user| %>
					<%= render 'users/index', users: user %>
				<% end %>
			<% else %>
				<% @results.each do |user| %>
					<%= render 'users/index', users: user %>
				<% end %>
			<% end %>
		<% elsif @sort == "Brand" %>
			<% if @input.blank? %>
				<% @clothes.each do |brand| %>
					<%= render 'clothes/index', clothes: brand %>
				<% end %>
			<% else %>
				<% @results.each do |brand| %>
					<%= render 'clothes/index', clothes: brand %>
				<% end %>
			<% end %>
		<% elsif @sort == "Category" %>
			<% if @input.blank? %>
					<% @categories.each do |category| %>
						<%= link_to category_path(category.id) do %>
							<div class="category-index-box">
								<strong><%= category.category %></strong>
							</div>
						<% end %>
					<% end %>
			<% else %>
				<% @results.each do |category| %>
					<%= link_to category_path(category.id) do %>
						<div class="category-index-box">
							<strong><%= category.category %></strong>
						</div>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>
