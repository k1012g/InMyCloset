<div class="container clearfix">
	<br>
	<strong class="font-m text-center">Add clothes</strong>
	<br>
	<!-- プレビュー -->
	<div class="preview text-center">
		<div>
			<strong>Image is here.</strong>
		</div>
		<br>
		<strong>Category : </strong>
		<span>(Example : tops)</span>
		<br>
		<strong>Brand : </strong>
		<span>(Example : Gucci)</span>
		<br>
		<strong>Size : </strong>
		<span>(Example : 42/S)</span>
	</div>
	<!-- 入力フォーム -->
	<div class="new">
		<%= form_with(model: @cloth, url: create_clothes_path, local: true) do |f| %>
			<!-- 入力フォームの部分テンプレート -->
			<%= render 'clothes/form', form: f %>
			<!-- エラーメッセージの部分テンプレート -->
			<%= render 'layouts/error', obj: @cloth %>
			<br>
			<%= f.submit "Add clothes", class: "btn done-btn" %>
			<span>
				<%= link_to "Back", user_path(current_user.id), class: "btn done-btn" %>
			</span>
		<% end %>
	</div>
</div>