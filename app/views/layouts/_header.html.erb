<header class="header">
	<%= link_to root_path do %>
		<span><strong>InMyCloset</strong></span>
	<% end %>
	<% if signed_in? %>
		<div style="float: right;">
			<strong><%= link_to "Sign out", destroy_user_session_path, data: { confirm: "Are you sure?" }, method: :delete %></strong>
			<strong><%= link_to "Search", search_path %></strong>
			<strong><%= link_to "My Closet", cloth_path(current_user.id) %></strong>
		</div>
	<% else %>
		<div style="float: right;">
			<strong><%= link_to "What is InMyCloset?", about_path %></strong>
			<strong><%= link_to "Search", search_path %></strong>
			<strong><%= link_to "Sign in!", new_user_session_path %></strong>
			<strong><%= link_to "Sign up!", new_user_registration_path
			 %></strong>
		</div>
	<% end %>
</header>