<% if signed_in? != false %>
	<% if user.followed_by?(current_user) %>
	<!-- followしている時 -->
		<%= link_to "Following", user_relationships_path(user.id), method: :delete, remote: true, class: "btn following-btn" %>
	<% else %>
	<!-- followしていない時 -->
		<%= link_to "Follow", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-default" %>
	<% end %>
<% end %>