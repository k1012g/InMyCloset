<% if signed_in? != false %>
	<% if user.followed_by?(current_user) %>
		<%= link_to "Following", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-primary" %>
	<% else %>
		<%= link_to "Follow", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-default" %>
	<% end %>
<% end %>