<!-- ログインしている時 -->
<% if signed_in? %>

	<!-- followしている時 -->
	<% if user.followed_by?(current_user) %>
		<%= link_to "Following", user_relationships_path(user.id), method: :delete, remote: true, class: "btn done-btn" %>

	<!-- followしていない時 -->
	<% else %>
		<%= link_to "Follow", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-default" %>
	<% end %>

<!-- ログインしていない時 -->
<% else %>
	<%= link_to "Follow", confirm_path, class: "btn btn-default" %>
<% end %>