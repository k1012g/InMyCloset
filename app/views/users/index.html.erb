<div class="users-index-box">
	<% @users.each do |users| %>
		<div class="each-users">
			<%= link_to user_path(users.id) do %>
				<%= attachment_image_tag users, :profile_image, :fill, 200, 200, fallback: "no_image.png", size:'200x200' %><br>
				<strong><%= users.name %></strong>
				<% if current_user != users %>
					<% if users.followed_by?(current_user) %>
						<%= link_to "Following", user_relationships_path(users.id), method: :delete, class: "btn btn-danger" %>
					<% else %>
						<%= link_to "Follow", user_relationships_path(users.id), method: :post, class: "btn btn-primary" %>
					<% end %>
				<% end %>
			<% end %>
		</div>
	<% end %>
</div>
