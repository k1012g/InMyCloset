<div class="following-inner col-xs-8">
	<%= link_to cloth_path(user.id) do %>
		<%= attachment_image_tag user, :profile_image, :fill, 150, 150, fallback: "no_image.png", size:'150x150' %>
		<strong><%= user.name %></strong>
	<% end %>
	<% if current_user != user %>
		<% if user.followed_by?(current_user) %>
			<%= link_to "Following", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
		<% else %>
			<%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "btn btn-default" %>
		<% end %>
	<% end %>
</div>
<div class="col-xs-4" style="width: 20%;">
	<%= link_to following_path(user.id) do %>
		<strong>Following : <%= user.followings.count %></strong><br>
	<% end %>
	<%= link_to follower_path(user.id) do %>
		<strong>Follower : <%= user.followers.count %></strong>
	<% end %>
</div>