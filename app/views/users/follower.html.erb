<strong class="font-bg text-center">
	Follower Users(<%= @follower.count %>)
</strong>
<strong class="font-bg text-center">
	<!-- そのページのユーザーネーム -->
	<%= @user.name %>
</strong>
<% if @follower.blank? %>
<!-- フォロワーがいない時 -->
	<strong class="font-md">No users.</strong>
	<% if current_user == @user %>
		<strong class="font-md" style="text-decoration: underline;">
			<!-- 検索ページ(ユーザー一覧が観れるため) -->
			<%= link_to "Let's follow users!", search_path %>
		</strong>
	<% end %>
<% else %>
<!-- フォロワーがいる時 -->
	<% @follower.each do |user| %>
		<div class="width-bg box-border">
			<%= render 'users/index', users: user %>
		</div>
	<% end %>
<% end %>